<div class='new-post'>
  <%= form_for @post do |f| %>
    <div>
      <%= f.text_field :title %>
    <div>
    <div>
      <%= f.text_area :description %>
    <div>
    <div>
      <%= f.collection_select :author_id, @authors, :id, :name %>
    <div>
    <div>
      <%= f.collection_select :category_id, @categories, :id, :name %>
    <div>
    <%= f.submit %>
  <% end %>
</div>